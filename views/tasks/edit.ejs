<%- layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your task</h2>
            <form method="POST" action="/tasks/<%= task._id %>/?_method=PUT" class="mt-4">
                <div class="mb-3">
                    <label class="form-label" for="task">Task</label>
                    <input type="text" value="<%= task.task %>" name="task" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dueDate">Due Date</label>
                    <input type="date" value="<%= task.dueDate %>" name="dueDate" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dueDate">Priority</label>
                    <select class="form-select form-control" aria-label="Default select example" name="priority">
                        <option selected>Select Priority</option>
                        <option value="High" <% if(task.priority === "High") { %> selected <% } %>>High </option>
                        <option value="Medium" <% if(task.priority === "Medium") { %> selected <% } %>>Medium </option>
                        <option value="Low" <% if(task.priority === "Low") { %> selected <% } %>>Low </option>
                      </select>
                </div>
                <button class="btn btn-danger mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
