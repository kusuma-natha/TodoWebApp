<%- layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Add New Task</h2>
            <form method="POST" action="/tasks" class="needs-validation mt-4" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="task">Task</label>
                    <input type="text" placeholder="Enter your task" name="task" class="form-control" required>
                    <div class="invalid-feedback">
                        Task is required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dueDate">Due Date</label>
                    <input type="date" name="dueDate" class="form-control" required>
                    <div class="invalid-feedback">
                        Due date is required!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="priority">Priority</label>
                    <select class="form-select form-control" name="priority" aria-label="Default select example" required>
                        <option value="" disabled selected>High/Medium/Low</option>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                      </select>
                      <div class="invalid-feedback">
                        Priority increases productivity!
                    </div>
                </div>
                <button class="btn btn-success mt-3">Add</button>
            </form>
        </div>
    </div>

    <script>
        // Add Bootstrap's client-side validation JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'
    
            // Fetch all the forms we want to apply custom Bootstrap validation to
            var forms = document.querySelectorAll('.needs-validation')
    
            // Loop over the forms and prevent submission if invalid
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault() // Prevent form submission
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated') // Apply validation styles
                    }, false)
                })
        })()
    </script>
</body>